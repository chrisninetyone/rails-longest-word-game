<h1>Longest Word Game</h1>

<div><% @letters.each do |letter| %>
  <div class="letters"><%=  letter %></div>
  <% end %>
</div>



<form action="/score" method="post">
   <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
 <input id="tags_list" name="letters" type="hidden" value="<%= @letters %>" />
  <p>What's the longest word you can find?</p>
  <input class="input" name="input" type="text" placeholder="Your word">
  <input class="btn" type="submit" value="Play">
</form>
